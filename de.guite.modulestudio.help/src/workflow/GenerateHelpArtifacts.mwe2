module de.guite.modulestudio.help.workflow.GenerateHelpArtifacts

import org.eclipse.emf.mwe.utils.*

var modelPath = 'xdoc'
var targetDir = 'contents'

// WARNING: make sure your workspace encoding is set to ISO-8859-1.

Workflow {

    component = org.eclipse.xtext.mwe.Reader {
        useJavaClassPath = true

        // define search scope explicitly
        path = modelPath

        register = org.eclipse.xtext.xdoc.XdocStandaloneSetup {}
        loadResource = {
            slot = 'model'
            uri = ".*\\.xdoc$"
        }
    }

    component = org.eclipse.xtext.generator.GeneratorComponent {
        register = org.eclipse.xtext.xdoc.XdocStandaloneSetup {}
        slot = 'model'
        outlet = {
            path = targetDir
        }
    }
}
